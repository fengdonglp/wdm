{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es6",
      "es2017"
    ]
  },
  "include": [
    "rollup.config.js",
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}